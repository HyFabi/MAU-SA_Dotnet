@{
}


@{
	ViewData["Title"] = "View";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using At.Mausa.Grasmaster.Domain.Models;
@model User

<h1>Confirm Delete</h1>
<h2>Are you sure to delete that?</h2>
<span>GUID: @Model.Guid</span>
<span>Email: @Model.Email</span>
<span>Password: @Model.PasswordHash</span>

<h6>Address</h6>
<span>Street: @Model.Address.Street</span>
<span>City: @Model.Address.City</span>
<span>Country: @Model.Address.Country</span>


<form method="post">
	<input hidden name="guid" value="@Model.Guid" />
	<input type="submit" value="Submit" class="submit" />
</form>
<a href="..">Cancel</a>
