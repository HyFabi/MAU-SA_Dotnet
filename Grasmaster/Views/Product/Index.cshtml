@*
	
*@
@using At.Mausa.Grasmaster.Domain.Models;
@model IEnumerable<Product>

@{
	ViewData["Title"] = "Product";
}


@if (Model.Count<Product>() == 0)
{
	<h3>No Products</h3>
}

<table cellpadding="5" cellspacing="5">
	<tr>
		<th>Name</th>
		<th>Description</th>
	</tr>

	
	@foreach (Product product in Model ?? throw new ArgumentNullException())
	{
		<tr>
			<td>@product.Name</td>
			<td>@product.Description</td>
		</tr>
	}
	
</table>
